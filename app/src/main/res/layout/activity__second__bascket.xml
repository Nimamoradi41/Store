                        android:layout_height="0dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/shap_29"
                        android:gravity="right|center"
                        android:hint="کد تخفیف"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:singleLine="true"
                        android:textColor="#707070"
                        android:textColorHint="@color/stand_3"
                        android:textCursorDrawable="@null"
                        app:layout_constraintBottom_toBottomOf="@+id/btn_offer"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/btn_offer"
                        app:layout_constraintTop_toTopOf="@+id/btn_offer"
