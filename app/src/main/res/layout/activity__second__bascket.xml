                        android:text="تاییدیه زمان تحویل "
                        android:textColor="@color/stand_Color"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/recyclerView"
