<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Back_Color"
    tools:context=".DetailOrder">
    <androidx.cardview.widget.CardView
        android:id="@+id/constraintLayout3"
        android:layout_width="0dp"
        android:layout_height="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:background="#fff"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/linearLayout555"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/imageView6"
                    app:tint="@color/Base_Color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/ic_baseline_arrow_back_24" />
            </LinearLayout>
            <TextView
                android:id="@+id/textView1581"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:text="اهواز مال"
                android:fontFamily="@font/vazir_med"
                android:textColor="@color/Base_Color"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="#fff"
                android:elevation="4dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#fff">

                    <TextView
                        android:id="@+id/textView31"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:text="شماره پیگیری : "
                        android:textColor="@color/Stable_Text"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/textView32"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="نام تحویل گیرنده :"
                        android:textColor="@color/stand_Color"
                        app:layout_constraintEnd_toEndOf="@+id/textView31"
                        app:layout_constraintTop_toBottomOf="@+id/textView60" />

                    <TextView
                        android:id="@+id/textView33"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="تاریخ خرید :"
                        android:textColor="@color/stand_Color"
                        app:layout_constraintEnd_toEndOf="@+id/textView32"
                        app:layout_constraintTop_toBottomOf="@+id/textView37" />

                    <TextView
                        android:id="@+id/textView34"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="آدرس :"
                        android:textColor="@color/stand_Color"
                        app:layout_constraintEnd_toEndOf="@+id/textView33"
                        app:layout_constraintTop_toBottomOf="@+id/textView38" />

                    <TextView
                        android:id="@+id/textView35"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="8dp"
                        android:text="مبلغ :"
                        android:textColor="@color/stand_Color"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@+id/textView34"
                        app:layout_constraintTop_toBottomOf="@+id/textView39"
                        app:layout_constraintVertical_bias="0.0" />

                    <TextView
                        android:id="@+id/textView36"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:gravity="right"
                        tools:text="261251546"
                        android:textColor="@color/Dynamic_Color"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="@+id/textView31"
                        app:layout_constraintEnd_toStartOf="@+id/textView31"
                        app:layout_constraintTop_toTopOf="@+id/textView31" />
                    <TextView
                        android:id="@+id/textView37"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:gravity="right"
                        tools:text="احمد رضا محمدی"
                        android:textColor="@color/Dynamic_Color"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="@+id/textView32"
                        app:layout_constraintEnd_toStartOf="@+id/textView32"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/textView32" />

                    <TextView
                        android:id="@+id/textView38"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:gravity="right"
                        tools:text="1399/09/16"
                        android:textColor="@color/Dynamic_Color"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="@+id/textView33"
                        app:layout_constraintEnd_toStartOf="@+id/textView33"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/textView33" />

                    <TextView
                        android:id="@+id/textView39"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:gravity="right"
                        android:textColor="@color/Dynamic_Color"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="@+id/textView34"
                        app:layout_constraintEnd_toStartOf="@+id/textView34"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/textView34"
                        app:layout_constraintVertical_bias="0.0"
                        tools:text="زیتون کارمندی خیابان فیلسوف مجتمع علی " />

                    <TextView
                        android:id="@+id/textView40"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:gravity="right"
                        tools:text="25.000 هزارتومان"
                        android:textColor="@color/Dynamic_Color"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="@+id/textView35"
                        app:layout_constraintEnd_toStartOf="@+id/textView35"
                        app:layout_constraintStart_toStartOf="@+id/textView39"
                        app:layout_constraintTop_toTopOf="@+id/textView35" />

                    <View
                        android:id="@+id/view"
                        android:layout_width="0dp"
                        android:layout_height="0.10dp"
                        android:layout_marginTop="8dp"
                        android:background="@color/stand_Color"
                        app:layout_constraintEnd_toEndOf="@+id/textView31"
                        app:layout_constraintStart_toStartOf="@+id/textView41"
                        app:layout_constraintTop_toBottomOf="@+id/textView36" />

                    <TextView
                        android:id="@+id/textView60"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="کد تحویل :"
                        android:textColor="@color/stand_Color"
                        app:layout_constraintEnd_toEndOf="@+id/view"
                        app:layout_constraintTop_toBottomOf="@+id/view" />

                    <TextView
                        android:id="@+id/textView63"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        tools:text="51515151"
                        android:textColor="@color/Dynamic_Color"
                       android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="@+id/textView60"
                        app:layout_constraintEnd_toStartOf="@+id/textView60"
                        app:layout_constraintTop_toTopOf="@+id/textView60" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:id="@+id/recy_itemss_2"

                android:layout_height="wrap_content" />
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="#fff"
                android:elevation="4dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#fff">

                    <TextView
                        android:id="@+id/count_"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:text="تعداد اقلام :"
                        android:textColor="#C4000000"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/sum_"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="جمع کل :"
                        android:textColor="#C4000000"
                        app:layout_constraintEnd_toEndOf="@+id/count_"
                        app:layout_constraintTop_toBottomOf="@+id/view_2" />

                    <TextView
                        android:id="@+id/offer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="تخفیف :"
                        android:textColor="#C4000000"
                        app:layout_constraintEnd_toEndOf="@+id/sum_"
                        app:layout_constraintTop_toBottomOf="@+id/tx_sum" />

                    <TextView
                        android:id="@+id/mony_send"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="هزینه ارسال :"
                        android:textColor="#C4000000"
                        app:layout_constraintEnd_toEndOf="@+id/offer"
                        app:layout_constraintTop_toBottomOf="@+id/tx_offer" />

                    <TextView
                        android:id="@+id/mony"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="8dp"
                        android:text="مبلغ قابل پرداخت  :"
                        android:textColor="#C4000000"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@+id/mony_send"
                        app:layout_constraintTop_toBottomOf="@+id/tx_mony_send"
                        app:layout_constraintVertical_bias="0.0" />

                    <TextView
                        android:id="@+id/tx_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:gravity="right"
                        tools:text="5"
                        android:textColor="@color/Dynamic_Color"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="@+id/count_"
                        app:layout_constraintEnd_toStartOf="@+id/count_"
                        app:layout_constraintTop_toTopOf="@+id/count_" />

                    <TextView
                        android:id="@+id/tx_sum"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:gravity="right"
                       tools:text="250.000 تومان"
                        android:textColor="@color/Dynamic_Color"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="@+id/sum_"
                        app:layout_constraintEnd_toStartOf="@+id/sum_"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/sum_" />

                    <TextView
                        android:id="@+id/tx_offer"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:gravity="right"
                       tools:text="25%"
                        android:textColor="@color/Dynamic_Color"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="@+id/offer"
                        app:layout_constraintEnd_toStartOf="@+id/offer"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/offer"
                        app:layout_constraintVertical_bias="0.0" />

                    <TextView
                        android:id="@+id/tx_mony_send"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:gravity="right"
                       android:text="15.000 تومان"
                        android:textColor="@color/Dynamic_Color"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="@+id/mony_send"
                        app:layout_constraintEnd_toStartOf="@+id/mony_send"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/mony_send" />
                    <TextView
                        android:id="@+id/tx_mony"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:gravity="right"
                        tools:text="40.000 تومان"
                        android:textColor="@color/Dynamic_Color"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="@+id/mony"
                        app:layout_constraintEnd_toStartOf="@+id/mony"
                        app:layout_constraintStart_toStartOf="@+id/tx_mony_send"
                        app:layout_constraintTop_toTopOf="@+id/mony" />

                    <View
                        android:id="@+id/view_2"
                        android:layout_width="0dp"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="8dp"
                        android:background="@color/Dynamic_Color"
                        app:layout_constraintEnd_toEndOf="@+id/mony"
                        app:layout_constraintStart_toStartOf="@+id/textView41"
                        app:layout_constraintTop_toBottomOf="@+id/tx_count" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:background="@drawable/shape_18"
                android:text="پرداخت شده"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="16sp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:gravity="center"
                android:id="@+id/btn_satau"
                android:paddingTop="12dp"
                android:layout_margin="8dp"
                android:paddingBottom="12dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>