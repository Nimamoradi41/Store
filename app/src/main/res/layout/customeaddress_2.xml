<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layoutDirection="ltr"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        app:cardElevation="4dp"
        android:elevation="4dp"
        app:cardCornerRadius="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="#fff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:background="#fff"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView32"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:text="نام ساختمان :"
                android:textColor="@color/Stable_Text"
                android:textSize="12sp"
                app:layout_constraintEnd_toStartOf="@+id/imageView34"
                app:layout_constraintTop_toBottomOf="@+id/rad" />

            <TextView
                android:id="@+id/textView33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="طبقه :"
                android:textColor="@color/stand_Color"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="@+id/textView32"
                app:layout_constraintTop_toBottomOf="@+id/textView37" />

            <TextView
                android:id="@+id/textView34"
                android:layout_width="wrap_content"
                android:textColor="@color/stand_Color"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textSize="12sp"
                android:text="واحد :"
                app:layout_constraintEnd_toEndOf="@+id/textView33"
                app:layout_constraintTop_toBottomOf="@+id/textView38" />

            <TextView
                android:id="@+id/textView35"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:text="پلاک"
                android:textSize="12sp"
                android:textColor="@color/stand_Color"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/textView34"
                app:layout_constraintTop_toBottomOf="@+id/textView39" />



            <TextView
                android:id="@+id/textView37"
                android:gravity="right"
                android:layout_width="0dp"
                android:textStyle="bold"
                android:textColor="@color/Dynamic_Color"
                android:textSize="12sp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                tools:text="علی"
                app:layout_constraintBottom_toBottomOf="@+id/textView32"
                app:layout_constraintEnd_toStartOf="@+id/textView32"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textView32" />

            <TextView
                android:id="@+id/textView38"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/Dynamic_Color"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                tools:text="1"
                app:layout_constraintBottom_toBottomOf="@+id/textView33"
                app:layout_constraintEnd_toStartOf="@+id/textView33"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textView33" />

            <TextView
                android:id="@+id/textView39"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:gravity="right"
                android:textStyle="bold"
                android:textSize="12sp"
                android:textColor="@color/Dynamic_Color"
                android:layout_marginEnd="8dp"
                tools:text="1"
                app:layout_constraintBottom_toBottomOf="@+id/textView34"
                app:layout_constraintEnd_toStartOf="@+id/textView34"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textView34" />

            <TextView
                android:id="@+id/textView40"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:textSize="12sp"
                android:gravity="right"
                tools:text="16"
                android:textColor="@color/Dynamic_Color"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/textView35"
                app:layout_constraintEnd_toStartOf="@+id/textView35"
                app:layout_constraintStart_toStartOf="@+id/textView39"
                app:layout_constraintTop_toTopOf="@+id/textView35" />

            <ImageView
                android:id="@+id/imageView32"
                android:layout_width="25dp"
                android:layout_height="25dp"
                app:tint="@color/Dynamic_Color"
                android:layout_marginStart="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/textView35"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/ic_baseline_delete_24" />

            <ImageView
                android:id="@+id/imageView33"
                android:layout_width="25dp"
                android:layout_height="25dp"
                app:tint="@color/Dynamic_Color"
                android:layout_marginStart="16dp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView32"
                app:layout_constraintStart_toEndOf="@+id/imageView32"
                app:layout_constraintTop_toTopOf="@+id/imageView32"
                app:srcCompat="@drawable/ic_baseline_edit_24" />

            <ImageView
                android:id="@+id/imageView34"
                android:layout_width="15dp"
                android:layout_height="15dp"
                app:layout_constraintBottom_toBottomOf="@+id/textView32"
                app:layout_constraintEnd_toEndOf="@+id/rad"
                app:layout_constraintTop_toTopOf="@+id/textView32"
                app:srcCompat="@drawable/ic_buil_1"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:id="@+id/imageView35"
                android:layout_width="15dp"
                android:layout_height="15dp"
                app:tint="#546E7A"
                app:layout_constraintBottom_toBottomOf="@+id/textView33"
                app:layout_constraintEnd_toEndOf="@+id/imageView34"
                app:layout_constraintTop_toTopOf="@+id/textView33"
                app:srcCompat="@drawable/ic_floor" />

            <ImageView
                android:id="@+id/imageView36"
                android:layout_width="15dp"
                android:layout_height="15dp"
                app:tint="#546E7A"
                app:layout_constraintBottom_toBottomOf="@+id/textView34"
                app:layout_constraintEnd_toEndOf="@+id/imageView35"
                app:layout_constraintTop_toTopOf="@+id/textView34"
                app:srcCompat="@drawable/ic_unit_1" />
            <ImageView
                android:id="@+id/imageView37"
                android:layout_width="15dp"
                android:layout_height="15dp"
                app:tint="#546E7A"
                app:layout_constraintBottom_toBottomOf="@+id/textView35"
                app:layout_constraintEnd_toEndOf="@+id/imageView36"
                app:layout_constraintTop_toTopOf="@+id/textView35"
                app:srcCompat="@drawable/ic_plack" />
            <RadioButton
                android:layoutDirection="rtl"
                android:id="@+id/rad"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:buttonTint="@color/Base_Color"
                android:gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>