    </style>
    <style name="MyShapeAppearance">
        <item name="cornerFamily" tools:ignore="DuplicateDefinition">rounded</item>
        <item name="cornerSizeTopLeft">8dp</item>
<!--        <item name="background">@drawable/shap_3</item>-->
        <item name="backgroundColor">@color/Base_Color</item>
        <item name="colorButtonNormal">@color/Base_Color</item>
        <item name="colorPrimary">@color/Base_Color</item>
        <item name="color">@color/Base_Color</item>
        <item name="colorAccent">@color/Base_Color</item>
        <item name="colorControlNormal">@color/Base_Color</item>
        <item name="colorOnBackground">@color/Base_Color</item>
        <item name="cornerSizeBottomRight">8dp</item>
        <item name="cornerSizeBottomLeft">8dp</item>
        <item name="cornerSizeTopRight">8dp</item>
